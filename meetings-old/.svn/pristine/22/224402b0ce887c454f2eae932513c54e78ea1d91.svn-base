*{
	position: relative;
	font-family: 'Segoe UI','Helvetica Neue', Helvetica, Arial, sans-serif;
	margin: 0px; 
	padding: 0px;
	outline: none; 
	list-style: none;
	user-select: none;
}
html,body{
	position: relative; 
	height: 100%;
	color: #292929;
	font-size: 14px;
	overflow:hidden;
	background-color: #000;
}
i{
	font-style: normal;
}
h1,h2,h3,h4,h5,h6{
	font-weight: normal;
}

.con_flex_column{ display: -webkit-flex; -webkit-flex-flow: column;}
.con_flex_row{ display: -webkit-flex; -webkit-flex-flow: row;}
.flex_none{-webkit-flex:none;}
.flex_1{-webkit-flex:1;}

.con{
	position: absolute; 
	top: 0px; 
	left: 0px; 
	display: block; 
	width: 100%; 
	height: 100%;
}

#popover{
	position: absolute; 
	top: 0; 
	left: 0; 
	width: 100%; 
	height: 100%;
	pointer-events: none;
}

.menuitm:hover{
    background-color: rgba(4,159,217,0.08);
}

.uibutton {
	height: 36px;
	font-size: 16px;
	line-height: 36px;
	text-align: center;
	border-radius: 18px;
	cursor: pointer;
	pointer-events: auto;
}
.uibutton.green {
	color: #FFF;
	background-color: #43A942;
}
.uibutton.red {
	color: #FFF;
	background-color: #F5483F;
}
.uibutton.disabled {
	color: #FFF;
	background-color: #ccc;
	pointer-events: none;
	cursor: default;
}


/* ---------- fillable svg icon ----------- */
.icobtn svg .fill,
.icobtn_s svg .fill{
    fill: #343537;
}
.icobtn svg .stroke,
.icobtn_s svg .stroke{
    stroke: #343537;
}
.icobtn .selected svg .fill,
.icobtn.selected svg .fill{
    fill: #FFF;
}
.icobtn_s .selected svg .fill,
.icobtn_s.selected svg .fill{
    fill: #FFF;
}
.icobtn .selected svg .stroke,
.icobtn.selected svg .stroke{
    stroke: #FFF;
}
.icobtn_s .selected svg .stroke,
.icobtn_s.selected svg .stroke{
    stroke: #FFF;
}

